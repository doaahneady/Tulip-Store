<!DOCTYPE html>
<head>
  <title><%- app.config.defaults.name %></title>

  <link rel="shortcut icon" href="images/fav-icon.png" type="image/x-icon" />
  <!-- Basic document metadata -->
  <meta charset="utf-8" />
  <!-- character encoding -->
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
  <!-- older fallback -->

  <meta name="title" content="Tulip Store" />
  <meta name="description" content="Send smile, Anywhere" />
  <meta
    name="keywords"
    content="store, shopping, shop, online, tulip, flower"
  />
  <!-- largely ignored by search engines -->
  <meta name="author" content="Tulip Store Team" />

  <!-- Language / region -->
  <meta http-equiv="Content-Language" content="en" />
  <!-- older method; prefer <html lang="..."> -->

  <!-- Viewport / mobile -->
  <meta
    name="viewport"
    content="width=device-width, initial-scale=1, maximum-scale=1"
  />
  <meta name="mobile-web-app-capable" content="yes" />
  <!-- Android/Chrome hint for standalone -->
  <meta name="apple-mobile-web-app-capable" content="yes" />
  <meta name="apple-mobile-web-app-title" content="Tulip Store" />
  <meta name="apple-mobile-web-app-status-bar-style" content="default" />
  <!-- default, black, black-translucent -->

  <!-- Icons & manifest -->
  <meta name="theme-color" content="#0D464C" />
  <!-- Chrome, Android toolbar color -->
  <link rel="apple-touch-icon" sizes="180x180" href="images/logo.ico" />
  <link rel="icon" type="image/x-icon" sizes="32x32" href="images/logo.ico" />

  <!-- SEO / crawl control -->
  <meta name="robots" content="index, follow" />
  <!-- index or noindex, follow or nofollow -->
  <meta
    name="googlebot"
    content="index,follow,max-snippet:-1,max-image-preview:large"
  />
  <meta name="revisit-after" content="7 days" />
  <!-- legacy; ignored by major engines -->
  <meta name="rating" content="general" />
  <!-- legacy -->

  <!-- Caching / pragma (legacy) -->
  <meta http-equiv="Pragma" content="no-cache" />
  <meta
    http-equiv="Cache-Control"
    content="no-cache, no-store, must-revalidate"
  />
  <meta http-equiv="Expires" content="0" />

  <!-- Redirection (HTTP-EQUIV refresh) -->
  <!-- <meta http-equiv="refresh" content="10;url=https://example.com/newpage"> -->
  <!-- NOT recommended for SEO; serverside redirects are better -->

  <!-- Referrer policy -->
  <meta name="referrer" content="no-referrer-when-downgrade" />
  <!-- strict-origin-when-cross-origin, no-referrer, origin -->

  <!-- Content Security Policy (often delivered via HTTP header; meta has limited use) -->
  <!-- Example: disable inline scripts (not recommended to set via meta in production) -->
  <!-- <meta http-equiv="Content-Security-Policy" content="default-src 'self'; img-src 'self' data: https://example-cdn.com; script-src 'self' 'nonce-abc123'"> -->

  <!-- Feature-policy / permissions-policy (modern replacement for Feature-Policy) -->
  <!-- <meta http-equiv="Permissions-Policy" content="geolocation=(self)"> -->

  <!-- Social sharing â€” Open Graph (Facebook, LinkedIn, Slack, etc.) -->
  <meta property="og:title" content="Tulip Store" />
  <meta property="og:description" content="Send smile, Anywhere" />
  <meta property="og:type" content="website" />
  <!-- article, website, video.movie, etc. -->
  <meta property="og:url" content="https://tulip-os.com" />
  <meta property="og:site_name" content="Tulip Store" />
  <meta property="og:image" content="images/panel2.jpg" />
  <meta property="og:image:alt" content="Panel" />
  <meta property="og:locale" content="en_US" />

  <!-- Twitter Cards -->
  <meta name="twitter:card" content="images/panel2.jpg" />
  <!-- summary, summary_large_image, player, etc. -->
  <meta name="twitter:title" content="Tulip Store" />
  <meta name="twitter:description" content="Send smile, Anywhere" />
  <meta name="twitter:image" content="images/panel2.jpg" />
  <meta name="twitter:site" content="Tulip Store" />
  <meta name="twitter:creator" content="Tulip Store Team" />

  <!-- Misc / vendor-specific hints -->
  <meta name="google" content="notranslate" />
  <!-- tell Google Translate not to offer translation -->
  <!-- <meta name="google-site-verification" content="your-google-verification-token"> -->

  <meta name="application-name" content="Tulip Store" />
  <meta name="audience" content="all" />

  <link rel="canonical" href="https://tulip-os.com" />

  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />
  <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
  />

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>

  <link rel="stylesheet" type="text/css" href="/css/home.css" />

  <link
    href="https://db.onlinewebfonts.com/c/ba155473d72fb574bd945b20f4598560?family=Montserrat-Alt1+SemBd"
    rel="stylesheet"
  />
  <link
    href="https://db.onlinewebfonts.com/c/29295d2928c6bd76a76c9e789982bc85?family=Montserrat-Alt1+Med"
    rel="stylesheet"
  />
  <!-- Bootstrap CSS -->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />
  <!-- Font Awesome -->
  <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
  />

  <script src="https://accounts.google.com/gsi/client?hl=en" async></script>
</head>
